{
   "$schema": "https://turborepo.com/schema.json",
   "ui": "tui",
   "tasks": {
      "build": {
         "dependsOn": ["^build"],
         "inputs": ["$TURBO_DEFAULT$", ".env*"],
         "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
      },
      "lint": {
         "dependsOn": ["^lint"]
      },
      "lint:fix": {
         "dependsOn": ["^lint:fix"]
      },
      "check-types": {
         "dependsOn": ["^check-types"]
      },
      "dev": {
         "cache": false,
         "persistent": true,
         "env": ["PORT"]
      },
      "start": {
         "dependsOn": ["build"],
         "cache": false,
         "persistent": true,
         "env": ["PORT"]
      }
   }
}
